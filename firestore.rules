
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This is a basic rule for prototyping. It allows anyone to read data,
    // but only authenticated users to write data.
    // For a production app, you would implement more granular security rules.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
