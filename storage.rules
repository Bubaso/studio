
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // This rule allows public read access to all files, which is suitable
    // for a prototype where images (categories, avatars, items) are meant to be public.
    // Writes are restricted to authenticated users.
    // For a production app, you might want more specific rules.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
